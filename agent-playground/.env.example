# OpenAI API Configuration
OPENAI_API_KEY=your_actual_openai_api_key_here

# Custom API URL (optional)
# Use this for local models or alternative providers
# Example for local Ollama: OPENAI_API_BASE_URL=http://localhost:11434/v1
# Example for Azure: OPENAI_API_BASE_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment
OPENAI_API_BASE_URL=

# Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# Agent Configuration
MAX_TOKENS=2000
VERBOSE=True

# System Prompts (can be overridden)
CODE_REVIEWER_PROMPT=You are an expert code reviewer. Analyze the provided code for bugs, style issues, performance problems, and security vulnerabilities.
TEST_WRITER_PROMPT=You are an expert test writer. Create comprehensive unit tests for the provided code.
DOCUMENTATION_AGENT_PROMPT=You are an expert technical writer. Create clear documentation for the provided code.
ARCHITECTURE_ADVISOR_PROMPT=You are an expert software architect. Provide architectural advice for the provided code.
